@model IEnumerable<sdp.Models.Order>

@{
    ViewData["Title"] = "GetAllOrders";
}

<h1>All Orders</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Customer Name
            </th>


            <th>
                @Html.DisplayNameFor(model => model.orderedby)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
                @Html.DisplayFor(modelItem => item.LastName)


            </td>


            <td>
                @Html.DisplayFor(modelItem => item.orderedby)
            </td>

            
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="OrderDetails" asp-controller="Order" asp-route-id="@item.OrderId">View Order Details</a>


            </td>
            <td>

                <a asp-action="ChangeStatus" asp-controller="Order" asp-route-id="@item.OrderId">Change Status</a>
            </td>



        </tr>
}
    </tbody>
</table>
